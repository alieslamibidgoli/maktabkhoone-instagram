<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="FollowButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#5cb85c</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="UnFollowButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#f9f9f9</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>
